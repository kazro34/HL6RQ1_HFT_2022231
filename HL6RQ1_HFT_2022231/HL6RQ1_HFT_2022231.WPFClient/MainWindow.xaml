<Window x:Class="HL6RQ1_HFT_2022231.WPFClient.Menu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HL6RQ1_HFT_2022231.WPFClient"
        mc:Ignorable="d"
        Title="Menu" Height="450" Width="800">
    <Grid>
        <StackPanel Grid.Column="1" >
            <Label Content="Please choose from: " Background="LightBlue" Padding="10"/>

            <Button Content="Authors" Command="{Binding AuthorCommand}" Margin="10" Padding="10"/>
            <Button Content="Books" Command="{Binding BookCommand}" Margin="10" Padding="10"/>
            <Button Content="Lentings" Command="{Binding LentingCommand}" Margin="10" Padding="10"/>
        </StackPanel>
    </Grid>
</Window>
